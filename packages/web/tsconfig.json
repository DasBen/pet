{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@core/*": [
        "../core/src/*"
      ]
    }
  },
  "include": [
    "src",
    "../core/src/interfaces/animal.ts",
    "../core/src/interfaces/baseProfile.ts",
    "../core/src/interfaces/careTaker.ts",
    "../core/src/interfaces/hashtag.ts",
    "../core/src/interfaces/organization.ts",
    "../core/src/interfaces/post.ts",
    "../core/src/interfaces/user.ts",
    "../core/src/mock",
    "../core/src/services/AnimalApi.ts"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}